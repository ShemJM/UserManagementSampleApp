<UserControl
    x:Class="UserManagementSampleApp.WPF.Views.UserDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UserManagementSampleApp.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:UserManagementSampleApp.ViewModels;assembly=UserManagementSampleApp"
    d:DataContext="{d:DesignInstance Type=viewmodels:UserDetailsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Text="{Binding User.Forename}" />
        <TextBlock Text="{Binding User.Surname}" />
        <TextBlock Text="{Binding User.Email}" />
        <TextBlock Text="{Binding User.MobileNumber}" />
    </StackPanel>
</UserControl>
